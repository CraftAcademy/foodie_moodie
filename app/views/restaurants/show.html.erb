<h1><%= @restaurant.name %></h1>

<div class="row">
  <% @dishes.each do |dish| %>
      <div class="col s12 m3">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag "http://lorempixel.com/400/200/food/" + dish.id.to_s + "/", class: "activator"%>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= dish.title %><i class="material-icons right">more_vert</i></span>

            <div><%= dish.price %> sek</div>
            <br>
            <%= form_tag(orders_path) do %>
                <%= hidden_field_tag :dish_id, dish.id %>
                <%= submit_tag("Add to order", id: dish.id) %>
            <% end %>

          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= dish.title %><i class="material-icons right">close</i></span>

            <p><%= dish.description %></p>
            <div><%= dish.price %> sek</div>
            <br>

          </div>
        </div>
      </div>
  <% end %>
</div>
