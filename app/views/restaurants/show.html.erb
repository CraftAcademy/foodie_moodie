<h1><%= @restaurant.name %></h1>

<div class="row">
  <% @dishes.each do |dish| %>
      <div class="col s12 m3">
        <div class="card" id="dish-<%= dish.id %>">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag dish.image.url, class: 'activator'%>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= dish.title %><i class="material-icons right">more_vert</i></span>

            <div><%= dish.price %> sek</div>
            <br>
            <%= form_tag(orders_path) do %>
                <%= hidden_field_tag :dish_id, dish.id %>
                <%= submit_tag('Add to order', id: dish.id, class: 'waves-effect waves-light btn btn-small') %>
            <% end %>

          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= dish.title %><i class="material-icons right">close</i></span>

            <div>Category: <%= dish.dish_category.name %> </div>
            <p>Description: <%= dish.description %></p>
            <div>Price: <%= dish.price %> sek</div>
            <br>

          </div>
        </div>
      </div>
  <% end %>
</div>
